<h3> Welcome, <%= current_user.username %></h3>

<% unless locals.empty? %>
  <p><%= message %></p>
<% end %>

<h2> Shopping List </h2>

<% @items.each do |item| %>
  <div>
    <!-- fix this so items belonging go to show page -->
    <% if @item.user_id == current_user.primary_key %>
       <a href="/show_item"<%= item.name %></a>
    <% else %>
      <%= item.name %>
    <% end %>
  </div>
<% end %>
